#NoEnv
#SingleInstance Force

Gui, Add, Text,, Please select a folder:
Gui, Add, Edit, vFolderPath w200
Gui, Add, Button, gSelectFolder, Select Folder
Gui, Add, ListBox, w300 h200 vMyListBox
Gui, Add, Button, gAddFolder, Add Folder
Gui, Add, Button, gRemoveFolder, Remove Folder
Gui, Add, Button, gMoveFolder, Move Folder
Gui, Show,, Folder Manager
return

SelectFolder:
FileSelectFolder, folder
if (!ErrorLevel && folder != "") {
    GuiControl,, FolderPath, % folder
}
return

AddFolder:
FileSelectFolder, folder
if (!ErrorLevel && folder != "") {
    GuiControl,, MyListBox, % folder "`n" MyListBox
}
return

RemoveFolder:
GuiControlGet, folder,, MyListBox
StringReplace, folder, folder, `n,, All
FileRecycle, % folder
GuiControl,, MyListBox, % StrReplace(MyListBox, folder "`n")
return

MoveFolder:
GuiControlGet, selectedFolder,, MyListBox
StringReplace, selectedFolder, selectedFolder, `n,, All
FileSelectFolder, destinationFolder
if (!ErrorLevel && destinationFolder != "") {
    FileMoveDir , % selectedFolder , % destinationFolder , 1 ; 1 is to overwrite existing files.
    GuiControl,, MyListBox , % StrReplace(MyListBox , selectedFolder "`n") ; remove the moved folder from the listbox.
}
return

GuiClose:
ExitApp

